{% extends 'base.html.twig' %}

{# le titre est rajouté devant - Zulgate #}
{% block title %}
    Accueil
{% endblock %}

{# affichage de tous les liens en page d'accueil #}
{% block body %}
    <div class="row m-0">
        {% for link in links %}
            <div class="col-md-3 float-left">
                <div class="card border-secondary my-3">
                    <div class="card-header">
                        <a href="{{ link.cible }}" target="_blank">
                            {{ link.name }}
                        </a>
                    </div>
                    <div class="card-body">
                        <p class="card-text font-weight-light" href="{{ path("view", {id: link.id}) }}">
                                {{ link.description }}
                        </p>
                        <a class="btn btn-outline-primary btn-sm" href="{{ path("view", {id: link.id}) }}">Détail
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div> 
    <br>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled">
            <a class="page-link" href="#" tabindex="-1">Précédent</a>
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item">
            <a class="page-link" href="#">Suivant</a>
            </li>
        </ul>
    </nav>
    <br> 
{% endblock %}
